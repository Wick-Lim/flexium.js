{
  "name": "flexium-monorepo",
  "version": "0.12.0",
  "private": true,
  "description": "Flexium - Fine-grained reactive UI framework (monorepo)",
  "type": "module",
  "scripts": {
    "build": "turbo run build",
    "build:flexium": "turbo run build --filter=flexium",
    "build:create-flexium": "turbo run build --filter=create-flexium",
    "build:eslint-plugin": "turbo run build --filter=eslint-plugin-flexium",
    "build:vite-plugin": "turbo run build --filter=vite-plugin-flexium",
    "build:docs": "turbo run build --filter=@flexium/docs",
    "dev": "turbo run dev --parallel",
    "dev:flexium": "turbo run dev --filter=flexium",
    "dev:docs": "turbo run dev --filter=@flexium/docs",
    "test": "turbo run test",
    "test:unit": "turbo run test --filter=flexium",
    "bench": "node tests/performance/benchmark.mjs",
    "bench:compare": "node tests/performance/comparison-benchmark.mjs",
    "test:e2e": "npx playwright test -c tests/playwright.config.ts",
    "test:e2e:quick": "BROWSER_LEVEL=quick npx playwright test -c tests/playwright.config.ts",
    "test:e2e:full": "BROWSER_LEVEL=full npx playwright test -c tests/playwright.config.ts",
    "test:e2e:primitives": "TEST_SUITE=primitives npx playwright test -c tests/playwright.config.ts",
    "test:e2e:router": "npx playwright test -c tests/playwright.config.ts tests/e2e/router.spec.ts",
    "test:e2e:chromium": "npx playwright test -c tests/playwright.config.ts --project=chromium",
    "test:e2e:firefox": "npx playwright test -c tests/playwright.config.ts --project=firefox",
    "test:e2e:webkit": "npx playwright test -c tests/playwright.config.ts --project=webkit",
    "test:e2e:mobile": "npx playwright test -c tests/playwright.config.ts --project=mobile-chrome --project=mobile-safari",
    "test:a11y": "npx playwright test -c tests/playwright.config.ts tests/e2e/accessibility.spec.ts",
    "test:cli": "./tests/unit/test-simple.sh",
    "typecheck": "turbo run typecheck",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "clean": "turbo run clean && rm -rf node_modules",
    "version:sync": "node scripts/sync-versions.mjs",
    "deploy:patch": "node scripts/deploy.mjs patch",
    "deploy:minor": "node scripts/deploy.mjs minor",
    "deploy:major": "node scripts/deploy.mjs major"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "keywords": [
    "flexium",
    "signals",
    "reactive",
    "ui",
    "framework",
    "monorepo"
  ],
  "author": "Flexium Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Wick-Lim/flexium.js.git"
  },
  "bugs": {
    "url": "https://github.com/Wick-Lim/flexium.js/issues"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@playwright/test": "^1.56.1",
    "jsdom": "^24.1.3",
    "turbo": "^2.6.1"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.53.3"
  }
}
