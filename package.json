{
  "name": "flexium",
  "version": "0.1.0",
  "description": "A lightweight, signals-based UI framework with cross-platform renderers",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./dom": {
      "import": "./dist/dom.mjs",
      "require": "./dist/dom.js",
      "types": "./dist/dom.d.ts"
    },
    "./canvas": {
      "import": "./dist/canvas.mjs",
      "require": "./dist/canvas.js",
      "types": "./dist/canvas.d.ts"
    },
    "./primitives": {
      "import": "./dist/primitives.mjs",
      "require": "./dist/primitives.js",
      "types": "./dist/primitives.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "tsup --watch",
    "dev:web": "cd examples/web-demo && npm run dev",
    "build": "tsup",
    "build:types": "tsc --emitDeclarationOnly",
    "test": "node --test test/*.test.mjs",
    "test:signal": "node --test test/signal.test.mjs",
    "test:dom": "node --test test/dom.test.mjs",
    "test:integration": "node --test test/integration.test.mjs",
    "test:vitest": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build && npm test",
    "release": "npm version patch && npm publish",
    "release:minor": "npm version minor && npm publish",
    "release:major": "npm version major && npm publish"
  },
  "keywords": [
    "signals",
    "reactive",
    "ui",
    "framework",
    "dom",
    "canvas",
    "renderer",
    "flexbox",
    "lightweight"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "jsdom": "^24.1.3",
    "prettier": "^3.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
