{
  "name": "flexium-ssr-starter",
  "version": "1.0.0",
  "type": "module",
  "description": "Server-Side Rendering starter template for Flexium",
  "scripts": {
    "dev": "node --watch server.js",
    "build": "vite build --outDir dist/client && vite build --ssr src/server/entry-server.js --outDir dist/server",
    "preview": "NODE_ENV=production node server.js",
    "lint": "eslint . --ext .js,.jsx",
    "format": "prettier --write \"src/**/*.{js,jsx}\""
  },
  "dependencies": {
    "flexium": "^0.4.11",
    "express": "^4.18.0",
    "compression": "^1.7.4",
    "serve-static": "^1.15.0"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "prettier": "^3.2.0",
    "vite": "^5.0.0"
  }
}
