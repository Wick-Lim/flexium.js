{
  "name": "flexism",
  "version": "0.16.0",
  "description": "Realtime-first fullstack framework for Flexium",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "flexism": "./dist/cli.mjs"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.mjs",
      "require": "./dist/server.js"
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.mjs",
      "require": "./dist/client.js"
    },
    "./compiler": {
      "types": "./dist/compiler.d.ts",
      "import": "./dist/compiler.mjs",
      "require": "./dist/compiler.js"
    },
    "./stream": {
      "types": "./dist/stream.d.ts",
      "import": "./dist/stream.mjs",
      "require": "./dist/stream.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "flexium",
    "realtime",
    "sse",
    "server-sent-events",
    "streaming",
    "ssr",
    "fullstack",
    "framework",
    "signals"
  ],
  "author": "Flexium Contributors",
  "license": "MIT",
  "homepage": "https://flexium.junhyuk.im",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Wick-Lim/flexium.js.git"
  },
  "bugs": {
    "url": "https://github.com/Wick-Lim/flexium.js/issues"
  },
  "peerDependencies": {
    "flexium": ">=0.16.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "flexium": "workspace:*",
    "jsdom": "^24.1.3",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@swc/core": "^1.15.7",
    "esbuild": "^0.27.2"
  }
}
