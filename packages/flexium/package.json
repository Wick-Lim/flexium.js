{
  "name": "flexium",
  "version": "0.5.8",
  "description": "A lightweight, signals-based UI framework with cross-platform renderers",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.mjs",
      "require": "./dist/core.js"
    },
    "./advanced": {
      "types": "./dist/advanced.d.ts",
      "import": "./dist/advanced.mjs",
      "require": "./dist/advanced.js"
    },
    "./dom": {
      "types": "./dist/dom.d.ts",
      "import": "./dist/dom.mjs",
      "require": "./dist/dom.js"
    },
    "./canvas": {
      "types": "./dist/canvas.d.ts",
      "import": "./dist/canvas.mjs",
      "require": "./dist/canvas.js"
    },
    "./interactive": {
      "types": "./dist/interactive.d.ts",
      "import": "./dist/interactive.mjs",
      "require": "./dist/interactive.js"
    },
    "./primitives": {
      "types": "./dist/primitives.d.ts",
      "import": "./dist/primitives.mjs",
      "require": "./dist/primitives.js"
    },
    "./primitives/motion": {
      "types": "./dist/primitives/motion.d.ts",
      "import": "./dist/primitives/motion.mjs",
      "require": "./dist/primitives/motion.js"
    },
    "./primitives/form": {
      "types": "./dist/primitives/form.d.ts",
      "import": "./dist/primitives/form.mjs",
      "require": "./dist/primitives/form.js"
    },
    "./primitives/ui": {
      "types": "./dist/primitives/ui.d.ts",
      "import": "./dist/primitives/ui.mjs",
      "require": "./dist/primitives/ui.js"
    },
    "./primitives/layout": {
      "types": "./dist/primitives/layout.d.ts",
      "import": "./dist/primitives/layout.mjs",
      "require": "./dist/primitives/layout.js"
    },
    "./jsx-runtime": {
      "types": "./dist/jsx-runtime.d.ts",
      "import": "./dist/jsx-runtime.mjs",
      "require": "./dist/jsx-runtime.js"
    },
    "./jsx-dev-runtime": {
      "types": "./dist/jsx-dev-runtime.d.ts",
      "import": "./dist/jsx-dev-runtime.mjs",
      "require": "./dist/jsx-dev-runtime.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.mjs",
      "require": "./dist/server.js"
    },
    "./router": {
      "types": "./dist/router.d.ts",
      "import": "./dist/router.mjs",
      "require": "./dist/router.js"
    },
    "./test-exports": {
      "types": "./dist/test-exports.d.ts",
      "import": "./dist/test-exports.mjs",
      "require": "./dist/test-exports.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "tsup --watch",
    "dev:web": "cd examples/web-demo && npm run dev",
    "build": "tsup",
    "build:types": "tsc --emitDeclarationOnly",
    "test": "vitest run",
    "test:signal": "node --test ../../tests/unit/signal.test.mjs",
    "test:dom": "node --test ../../tests/unit/dom.test.mjs",
    "test:events": "node --test ../../tests/unit/events.test.mjs",
    "test:reconcile": "node --test ../../tests/unit/reconciliation.test.mjs",
    "test:integration": "node --test ../../tests/unit/integration.test.mjs",
    "test:vitest": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "release": "npm version patch && npm publish",
    "release:minor": "npm version minor && npm publish",
    "release:major": "npm version major && npm publish"
  },
  "keywords": [
    "signals",
    "reactive",
    "jsx",
    "ui",
    "framework",
    "dom",
    "canvas",
    "game",
    "game-loop",
    "renderer",
    "flexbox",
    "lightweight",
    "fine-grained",
    "typescript",
    "vite",
    "react-alternative",
    "preact-alternative",
    "solid-alternative",
    "no-virtual-dom",
    "signal-based",
    "computed",
    "effect",
    "cross-platform"
  ],
  "author": "Flexium Contributors",
  "license": "MIT",
  "homepage": "https://github.com/Wick-Lim/flexium.js#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Wick-Lim/flexium.js.git"
  },
  "bugs": {
    "url": "https://github.com/Wick-Lim/flexium.js/issues"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "jsdom": "^24.1.3",
    "prettier": "^3.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
