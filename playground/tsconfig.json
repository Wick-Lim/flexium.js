{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "flexium",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "@flexium/core": ["../src/core"],
      "@flexium/primitives": ["../src/primitives"],
      "flexium": ["../src/index.ts"],
      "flexium/dom": ["../src/dom.ts"],
      "flexium/jsx-runtime": ["../src/jsx-runtime.ts"],
      "flexium/jsx-dev-runtime": ["../src/jsx-dev-runtime.ts"],
      "../dist/index.mjs": ["../dist/index.d.ts"],
      "../dist/dom.mjs": ["../dist/dom.d.ts"],
      "../dist/jsx-runtime.mjs": ["../dist/jsx-runtime.d.ts"]
    }
  },
  "include": ["./**/*.ts", "./**/*.tsx", "../src/**/*.ts", "../src/**/*.d.ts"],
  "exclude": ["node_modules"]
}
