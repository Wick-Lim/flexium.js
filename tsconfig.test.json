{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "flexium",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "flexium/jsx-runtime": ["./src/jsx-runtime.ts"],
      "flexium/jsx-dev-runtime": ["./src/jsx-dev-runtime.ts"]
    }
  },
  "include": ["test-*.tsx", "src/**/*"]
}
